# Pretty colors gls
# Using GNU 'ls'. Install coreutils (homebrew)
alias ls='gls -hF --group-directories-first --color=auto'
alias ll='gls -hFAl --group-directories-first --color=auto'
alias l='gls -hFA1 --group-directories-first --color=auto'

# HISTORY: Cause I forget stuff
# ignore command starting with spaces & duplicates
export HISTCONTROL=ignorespace:ignoredups:erasedups
# append & reload in any window
PROMPT_COMMAND="history -a; history -r" 
# increase history size
unset HISTFILESIZE
HISTSIZE=20000 # wait, how much is that?
