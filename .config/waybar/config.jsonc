    "clock": {
        "timezone": "Europe/Oslo",
	"format": "{:%Y-%m-%d %H:%M:%S}",
	"interval": 1,
    },
    "cpu": {
        "format": "CPU: {usage}%",
        "interval": 1,
    },
    "memory": {
        "format": "MEM: {}%"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon} {volume}%",
